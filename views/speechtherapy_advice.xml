<odoo>
    <!-- Tree View -->
    <record id="view_advice_tree" model="ir.ui.view">
        <field name="name">advice.tree</field>
        <field name="model">speechtherapy.advice</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_advice" model="ir.actions.act_window">
        <field name="name">Advice</field>
        <field name="res_model">speechtherapy.advice</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_advice_tree"/>
    </record>


</odoo>
