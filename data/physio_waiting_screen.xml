<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="physiotherapy_waiting_screen" model="dsl.hms.waiting.screen">
            <field name="name">Speech Therapy: Waiting Screen</field>
            <field name="code">STWS</field>
            <field name="res_model_id" ref="dsl_hms_physiotherapy.model_dsl_physiotherapy"/>
            <field name="dsl_physician_field_id" search="[('model', '=', 'dsl.physiotherapy'), ('name', '=', 'physiotherapist_id')]"/>
            <field name="dsl_patient_field_id" search="[('model', '=', 'dsl.physiotherapy'), ('name', '=', 'patient_id')]"/>
            <field name="dsl_state_field_id" search="[('model', '=', 'dsl.physiotherapy'), ('name', '=', 'state')]"/>
            <field name="dsl_states_to_include">['in_queue','in_progress']</field>
            <field name="in_progress_state">in_progress</field>
            <field name="in_progress_color">#d9534f</field>
            <field name="show_cabin" eval="False"/>
            <field name="dsl_number_of_records">5</field>
            <field name="dsl_refresh_time">5</field>
        </record>

    </data>
</odoo>